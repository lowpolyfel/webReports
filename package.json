{
  "name": "webreports",
  "private": true,
  "workspaces": ["server", "web", "shared"],
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:server": "npm --workspace server run dev",
    "dev:web": "npm --workspace web run dev",
    "build": "npm-run-all build:*",
    "build:server": "npm --workspace server run build",
    "build:web": "npm --workspace web run build",
    "start": "npm --workspace server run start",
    "db:migrate": "node scripts/db-migrate.js",
    "db:seed": "node scripts/db-seed.js"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
